<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:gravity="top"
    tools:context="com.dwg_karrier.roys.LoginActivity">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="230dp"
      android:id="@+id/login_image"
      android:background="@drawable/appicon"
      android:layout_marginTop="70dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="230dp" app:srcCompat="@android:color/background_dark"
      android:layout_alignTop="@+id/login_image" android:layout_alignParentStart="true"
      android:id="@+id/imageView3" android:alpha="0.6"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/login_button"
      android:text="Login  "
      android:drawableRight="@drawable/ic_login_icon"
      android:layout_below="@+id/login_text"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/login_text"
      android:text="Enjoy your snack time!"
      android:textSize="20dp"
      android:textColor="@color/textColorPrimary"
      android:layout_marginTop="55dp"
      android:layout_below="@+id/login_image" android:layout_centerHorizontal="true"/>
</RelativeLayout>
