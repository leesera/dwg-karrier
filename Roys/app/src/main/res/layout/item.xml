<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="1">
  <ImageView
      android:layout_width="fill_parent"
      app:srcCompat="@drawable/empty"
      android:layout_alignParentTop="true" android:layout_alignParentStart="true"
      android:scaleType="centerCrop"
      android:id="@+id/listViewImage" android:layout_alignBottom="@+id/TimeView"
      android:layout_height="80dp"/>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="80dp" app:srcCompat="@android:color/background_light"
      android:layout_alignParentStart="true"
      android:id="@+id/showText" android:layout_alignParentTop="true"
      android:layout_alignBottom="@+id/listViewImage" android:alpha="0.65"/>
  <TextView
      android:id="@+id/TitleView"
      android:layout_width="match_parent"
      android:gravity="center_vertical" android:textAlignment="gravity"
      android:layout_alignParentTop="true" android:layout_alignParentStart="true"
      android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:textSize="16sp"
      android:layout_marginRight="10dp" android:textStyle="bold"
      android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
      android:textColorLink="@android:color/black"/>
  <TextView
      android:id="@+id/TimeView"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="right" android:textAlignment="gravity"
      android:layout_marginLeft="10dp" android:layout_marginRight="16dp"
      android:textStyle="bold"
      android:textColor="?android:attr/textColorTertiary" android:layout_below="@+id/TitleView"
      android:layout_marginTop="5dp"
  />
</RelativeLayout>